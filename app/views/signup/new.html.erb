<h1>New user</h1>

<%= form_for(@user, as: :signup, url: signup_path) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %> <%= mark_necessary_field(@user, :name) %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :email %> <%= mark_necessary_field(@user, :email) %><br>
    <%= f.text_field :email, placeholder: "Email addr" %>
  </div>
  <div class="field">
    <%= f.label :password %> <%= mark_necessary_field(@user, :password) %><br>
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label "Confirm Password"%> <%= mark_necessary_field(@user, :password_confirmation) %><br>
    <%= f.password_field :password_confirmation %>
  </div>
  <div class="actions">
    <%= f.submit "Sign Up" %>
  </div>
<% end %>
